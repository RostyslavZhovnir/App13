<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App13.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Load Tracker"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontAttributes="Bold"/>
            <Entry x:Name="loginEntry"  Placeholder = "Логин"/>
            <Entry x:Name="passwordEntry"  Placeholder = "Пароль" IsPassword ="True" />
            <Label x:Name="textLabel" FontSize="Large" />
            <Label x:Name="loginfail" Text="Вы ввели неверный логин или пароль..."
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="Red" />
            <Button x:Name="login" Text="Login" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

            <Button x:Name="myname" StyleClass = "Link" Text="Created by Rostyslav Zhovnir"
                VerticalOptions="CenterAndExpand" BackgroundColor="#fafafa"
                HorizontalOptions="CenterAndExpand" FontSize="8" FontAttributes="Bold" />

        </StackLayout>

       
    </ContentPage.Content>
</ContentPage>